<div class="list-group">
    {% for video in videos %}
        <a href="{{ path('watch_video', {slug: video.slug}) }}" class="list-group-item">
            <div class="media">
                <div class="media-left" href="#">
                    <div class="video-thumb-container">
                        <img src="{{ video_thumbnail(video) }}" width="89" height="50"/>
                        <span class="video-duration">{{ video.duration|duration }}</span>
                    </div>
                </div>
                <div class="media-body" style="vertical-align: middle;">
                    <h5 class="media-heading">{{ video.name }} </h5>
                    {% if admin_settings.show_video_description %}
                        <span class="small" title="{{ video.description|striptags }}">{{ video.description|striptags|truncate(100) }}</span><br/>
                    {% endif %}
                    <span class="small">
                        {% include '@Videos/video_stats.twig' %}
                    </span>
                </div>
            </div>
        </a>
    {% else %}
        <div class="list-group-item">
            {% trans %}None{% endtrans %}
        </div>
    {% endfor %}

    {% if more_button and admin_settings.show_more_button %}
        <a href="{{ more_button.url }}" class="list-group-item text-center">
            {{ more_button.label|trans }} <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    {% endif %}
</div>
