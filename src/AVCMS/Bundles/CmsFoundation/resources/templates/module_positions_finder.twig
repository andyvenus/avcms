{% extends '@admin/finder.twig' %}

{% block finder_header_titles %}
    <div class="col-md-12">
        {% trans %}Description{% endtrans %}
    </div>
{% endblock %}

{% block page_inner %}
    {% trans %}Positions{% endtrans %}
{% endblock %}

{% block item_checkbox %}

{% endblock %}

{% block item_title %}
    <div class="finder-item-title" data-field="name">
        {{ item.name }}
    </div>
{% endblock %}

{% block item_options %}
    <div class="btn-group">
        {{ buttons.manage('modules_manage_position', item.id) }}

        {% if item.active == 0 %}
            {{ buttons.delete('modules_delete_position') }}
        {% endif %}
    </div>

    {% if item.active == false %}
        <div class="label label-warning">{% trans %}Inactive{% endtrans %}</div>
    {% endif %}
{% endblock %}

{% block item_extended_inner %}
    <div class="col-md-12">
        {{ item.description }}
    </div>
{% endblock %}