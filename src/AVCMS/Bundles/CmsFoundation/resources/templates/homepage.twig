{% extends 'index.twig' %}

{% if full_title %}
    {% block full_title %}{{ homepage_title|trans }}{% endblock %}
{% else %}
    {% block title %}{{ homepage_title|trans }}{% endblock %}
{% endif %}

{% if module_position == 'homepage' and settings.site_description %}
    {% block meta_description %}{{ settings.site_description }}{% endblock %}
{% endif %}

{% block content %}
    {{ render_modules(module_position) }}
{% endblock %}
