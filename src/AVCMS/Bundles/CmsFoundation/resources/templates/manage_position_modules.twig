{% extends '@admin/editor.twig' %}

{% block title -%}
    Editing Modules Position - {{ item.name }}
{% endblock %}

{% block editor_title %}
    {{ item.name }}
{% endblock %}

{% block editor_content %}
    <span class="always-refresh"></span>
    <p><a href="{{ url('modules_admin_add', {position: item.id}) }}" class="btn btn-default">{% trans %}Add Module{% endtrans %}</a></p>

    <div class="sortable-container">
        <ul class="sortable" style="position: absolute;" data-sortable-levels="1" data-ajax-action="{{ url('modules_save_order', {position: item.id}) }}" data-ajax-delete-action="{{ url('modules_admin_delete') }}">
            {% for module in modules %}
            <li id="modules_order_{{ module.id }}" data-item-id="{{ module.id }}">
                <div class="sortable-item">
                    <span class="glyphicon glyphicon-align-justify handle"></span> {{ module.title }}
                    <div class="pull-right">
                        {{ module.moduleInfo.name }} &nbsp;
                        <a class="btn btn-xs btn-default" href="{{ url('modules_admin_edit', {id: module.id}) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                        <button class="btn btn-xs btn-danger delete-item"><span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}