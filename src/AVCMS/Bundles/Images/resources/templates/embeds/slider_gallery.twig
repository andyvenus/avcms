    <!-- Slides Container -->
    <div u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 800px; height: 556px; overflow: hidden;">
        {% for file in image_collection.files %}
            <div style="width: 100%;text-align:center;">
                <span class="avcms-vertical-helper"></span>
                <img src="{{ image_file_url(file) }}" style="max-height:456px;margin: auto;vertical-align: middle;" />
                <img u="thumb" src="{{ image_thumbnail(file) }}" />

                <div u="caption" style="color: white;padding: 10px;position: absolute; bottom: 0px; left: 0px; width: 100%;background-color: black;background-color: rgba(0,0,0, 0.5);">
                     {{ file.caption }}
                </div>

