{% extends 'index.twig' %}

{% block title %}{{ image.name }}{% endblock %}

{% block meta_description %}{{ image.description|striptags }}{% endblock %}

{% block header_extra %}
    <meta property="og:title" content="{{ image.name }}" />
    <meta property="og:image" content="{{ image_thumbnail(image) }}" />
    <meta property="og:description" content="{{ image.description|striptags }}" />
{% endblock %}

{% block content %}
    {% block image_top_modules %}
        <div class="image-top-modules">
            {{ render_modules('watch_image_top') }}
        </div>
    {% endblock %}

    {% block image_box %}
        <div class="box box-primary image-box">
            <div class="box-top">

                <div class="media">
                    <div class="media-left">
                        <img class="media-object" src="{{ image_thumbnail(image) }}" alt="{{ image.name }}" height="65">
                    </div>
                    <div class="media-body">
                        <h2 class="media-heading">{{ image.name }}</h2>
                        <a href="{{ path('image_category', {'category': image.category.slug}) }}">
                           <span class="glyphicon glyphicon-folder-open"></span> &nbsp;{{ image.category.name }}
                        </a>
                    </div>
                </div>
            </div>

            <div class="box-main">
                {% block image_box_main %}
                <div class="row">
                    <div class="col-lg-12">
                        {% if plays_left and settings.images_limit_plays %}
                            <div class="alert alert-info">{% trans with {total: plays_left} %}You have {total} image plays remaining before you must register{% endtrans %}</div>
                        {% endif %}

                        {{ embed_image(image) }}
                    </div>
                </div>
                {% endblock %}
            </div>
            <div class="box-footer">
                <div class="text-center">
                    {{ like_dislike_buttons('image', image.id, image) }}

                    {% if is_granted('ADMIN_IMAGES') %}
                        <a class="btn btn-default" href="{{ path('images_admin_edit', {'id': image.id}) }}"><span class="glyphicon glyphicon-pencil"></span> {% trans %}Edit Image{% endtrans %}</a>
                    {% endif %}

                    {% if is_granted('PERM_SEND_REPORTS') %}
                        <button class="btn btn-default" data-report-button data-content-type="images" data-content-id="{{ image.id }}"><span class="glyphicon glyphicon-bullhorn"></span> {% trans %}Report Issue{% endtrans %}</button>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endblock %}

    <div class="row">
        <div class="col-md-12">
            {% block image_instructions_box %}
                {% if image.instructions %}
                    <div class="box">
                        <div class="box-top">
                            <h4>{% trans %}Instructions{% endtrans %}</h4>
                        </div>
                        <div class="box-main">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>{{ image.instructions|raw }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}

            {% block image_details_box %}
                <div class="box image-details-box">
                    <div class="box-top">
                        <h4>{% trans %}Image Details{% endtrans %}</h4>
                    </div>
                    <div class="box-main">
                        <div class="row">
                            <div class="col-md-12">
                                <p class="image-description">{{ image.description|raw }}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>{% trans %}Date Added{% endtrans %}: {{ image.datePublished|date(settings.date_format) }}</p>
                            </div>
                            <div class="col-md-4">
                                <p>{% trans %}Category{% endtrans %}: <a href="{{ path('image_category', {'category': image.category.slug}) }}"> {{ image.category.name }}</a></p>
                            </div>
                            <div class="col-md-4">
                                <p>{% trans with {plays: image.hits} %}Played {plays} times{% endtrans %}</p>
                            </div>

                         </div>
                        <div class="row">
                            <div class="col-md-12">
                                {% trans %}Tags{% endtrans %}:
                                {% for tag in image.tags %}
                                    <a class="btn btn-default btn-xs" href="{{ path('image_tag', {'tags': tag.name}) }}">{{ tag.name }}</a>
                                {% else %}
                                    {% trans %}None{% endtrans %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block image_details_modules %}
                <div class="image-details-modules">
                    {{ render_modules('watch_image_details') }}
                </div>
            {% endblock %}

            {% block image_comments %}
                {{ comments('image', image, image.comments) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}
