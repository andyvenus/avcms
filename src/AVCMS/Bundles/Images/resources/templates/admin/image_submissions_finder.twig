{% extends '@admin/finder.twig' %}

{% block item_main %}
    {% block item_title %}
        <div class="finder-item-title" data-field="name">
            {{ item.name }}
        </div>
    {% endblock %}

    {% block item_options %}
        <div class="btn-group">
            <a class="btn btn-xs btn-default" href="{{ path('image_submissions_admin_review', {'id': item.id}) }}">
                <span class="glyphicon glyphicon-ok"></span> {% trans %}Review{% endtrans %}
            </a>

            {{ buttons.delete('image_submissions_admin_delete') }}
        </div>
    {% endblock %}
{% endblock %}

{% block finder_header_titles %}
    <div class="col-md-2 hidden-xs">
        {% trans %}User{% endtrans %}
    </div>
    <div class="col-md-2 hidden-sm hidden-xs">
        {% trans %}Date submitted{% endtrans %}
    </div>
    <div class="col-md-8 hidden-sm hidden-xs">
        {% trans %}Images{% endtrans %}
    </div>
{% endblock %}

{% block item_extended_inner %}
    <div class="col-md-2 hidden-xs">
        <a href="{{ path('users_admin_edit', {'id': item.user.id}) }}">{{ item.user.username }}</a>
    </div>
    <div class="col-md-2 hidden-sm hidden-xs">
        {{ item.dateAdded|date(settings.date_format) }}
    </div>
    <div class="col-md-8 hidden-sm hidden-xs">
        {{ item.totalImages }}
    </div>
{% endblock %}
