{% for comment in comments %}
    <div class="panel panel-default comment" data-id="{{ comment.id }}">
        <div class="panel-heading">
            <a href="{{ url('user_profile', {slug: comment.user.slug}) }}">{{ comment.user.username }}</a> - {{ comment.date|date(settings.date_format) }}

            {% if is_granted('ADMIN_COMMENTS') %}
                <div class="pull-right">
                    <button class="btn btn-danger btn-xs delete-comment">{% trans %}Delete{% endtrans %}</button>
                </div>
            {% endif %}
        </div>
        <div class="panel-body">
            {{ comment.comment }}
        </div>
    </div>
{% endfor %}