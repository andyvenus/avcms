{% for comment in comments %}
    <div class="panel panel-default comment" data-id="{{ comment.id }}">
        <div class="panel-heading">
            {{ user_info(comment.user) }} - {{ comment.date|date(settings.date_format) }}

            <div class="pull-right">
                {% if is_granted('PERM_SEND_REPORTS') %}
                    <button class="btn btn-default btn-xs" data-report-button data-user-id="{{ comment.userId }}" data-content-type="comments" data-content-id="{{ comment.id }}">{% trans %}Report{% endtrans %}</button>
                {% endif %}

                {% if is_granted(['MODERATOR_COMMENTS_DELETE', 'ADMIN_COMMENTS']) %}
                    <button class="btn btn-danger btn-xs delete-comment">{% trans %}Delete{% endtrans %}</button>
                {% endif %}
            </div>
        </div>
        <div class="panel-body" style="word-break: break-all">
            {{ comment.comment }}
        </div>
    </div>

    {% if last_page %}
        <span id="comments-last-page"></span>
    {% endif %}
{% endfor %}
