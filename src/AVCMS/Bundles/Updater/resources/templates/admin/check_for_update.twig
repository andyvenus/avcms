{% extends '@admin/simple_page.twig' %}

{% block title %}
    {% trans %}Updates{% endtrans %}
{% endblock %}

{% block content_body %}
    <div class="updater">
        <div class="app_name">
            <h1>{{ app_info.name }}</h1>
            <p style="font-size: 18px">{% trans with {version: app_info.version} %}You are running version {version}{% endtrans %}</p>
        </div>

        <div class="avcms-update-loading">
            <p>{% trans %}Checking for update...{% endtrans %}</p>
        </div>

        <div class="avcms-no-update text-success" style="display: none;"><strong>{% trans %}Up to date{% endtrans %}</strong></div>

        <div class="avcms-update-error text-danger" style="display: none;"></div>

        <div class="avcms-update-info" style="display: none;">
            <p class="text-success"><strong class="avcms-update-version-info">{% trans %}An update is available{% endtrans %}</strong></p>

            <p class="avcms-update-notes"></p>

            <p>
                <a class="btn btn-primary avcms-update-version-button" href="{{ download_url }}"><span class="glyphicon glyphicon-download-alt"></span> {% trans %}Download Version{% endtrans %}</a>
                <a class="btn btn-default avcms-update-release-notes-button"><span class="glyphicon glyphicon-info-sign"></span> {% trans %}Full Release Info{% endtrans %}</a>
            </p>

            <p>
                {% trans %}Update instructions can be found within the zip file{% endtrans %}
            </p>
        </div>
    </div>
{% endblock %}
