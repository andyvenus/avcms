{% extends '@admin/finder.twig' %}

{% block finder_header_titles %}

{% endblock %}

{% block item_title %}
    <div class="finder-item-title" data-field="label">
        {{ item.label }}
    </div>
{% endblock %}

{% block item_options %}
    <div class="btn-group">
        {{ buttons.manage('menus_admin_manage_items', item.id) }}
        {% if item.custom == 1 or item.active == 0 %}
            {{ buttons.delete('menus_admin_delete') }}
        {% endif %}
    </div>

    {% if item.active == 0 %}
        <span class="label label-warning">Inactive</span>
    {% endif %}
{% endblock %}

{% block item_extended_inner %}

{% endblock %}