{% block item_title %}
    <div class="finder-item-title" data-field="label">
        {{ item.label }}
    </div>
{% endblock %}

{% block item_options %}
    <div class="btn-group">
        <a class="btn btn-default btn-xs" href="{{ url('menus_admin_manage_items', {id: item.id}) }}"><span class="glyphicon glyphicon-th-list"></span> {% trans %}Manage{% endtrans %}</a>
        {{ buttons.edit(bundle.route.menus_admin_edit, item.id) }}
        {% if item.custom == 1 %}
            {{ buttons.delete(bundle.route.menus_admin_delete) }}
        {% endif %}
    </div>
{% endblock %}

