{% extends 'index.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="row">

        <div class="col-md-8">
            {% block blog_post %}
                <article class="blog_post_container">
                    <h2>{{ post.title }} <small>by {{ post.user.username }}</small></h2>

                    {% for tag in post.tags %}
                        <a class="btn btn-default btn-xs" href="{{ url(bundle.route.blog_archive, {tags: tag.name}) }}">{{ tag.name }}</a>
                    {% endfor %}

                    <p>{{ post.body|markdown }}</p>

                    <a class="btn btn-default btn-sm" href="{{ url(bundle.route.blog_edit_post, { id: post.id}) }}">Edit Post</a>
                </article>
            {% endblock %}
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Welcome</h3>
                </div>
                <div class="panel-body">
                    Well I am the best person here and welcome to my blog! I love a good blog in the afternoon! <a class="btn btn-default btn-xs">Test</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}