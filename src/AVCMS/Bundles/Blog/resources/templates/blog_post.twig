{% extends 'index.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    {% block blog_post %}
        <article class="blog-post-container">
            <h2>{{ post.title }}</h2>
            <p>{{ user_info(post.user) }}</p>

            <p>{{ post.body|raw }}</p>

            <span class="text-muted"><span class="glyphicon glyphicon-eye-open"></span> {{ post.hits }}</span> &nbsp;

            {% for tag in post.tags %}
                <a class="btn btn-default btn-xs" href="{{ url('blog_archive', {tags: tag.name}) }}">{{ tag.name }}</a>
            {% endfor %}

            {% if is_granted('ADMIN_BLOG')  %}
                <a class="btn btn-link btn-sm" href="{{ url('blog_edit_post', { id: post.id}) }}"><span class="glyphicon glyphicon-edit"></span> {% trans %}Edit Post{% endtrans %}</a>
            {% endif %}
        </article>
    {% endblock %}

    {% block blog_post_comments %}
        {% if settings.comments_enabled %}
            <h4>{% trans %}Comments{% endtrans %} ({{ post.comments }})</h4>
            {{ comments('blog_post', post) }}
        {% endif %}
    {% endblock %}
{% endblock %}