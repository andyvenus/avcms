{% extends 'index.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    {% block blog_post %}
        <article class="blog-post-container">
            <h2>{{ post.title }} <small>by {{ post.user.username }}</small></h2>

            {% for tag in post.tags %}
                <a class="btn btn-default btn-xs" href="{{ url('blog_archive', {tags: tag.name}) }}">{{ tag.name }}</a>
            {% endfor %}

            <p>{{ post.body|markdown }}</p>

            <a class="btn btn-link btn-sm" href="{{ url('blog_edit_post', { id: post.id}) }}"><span class="glyphicon glyphicon-edit"></span> Edit Post</a>
        </article>
    {% endblock %}

    {% block blog_post_comments %}
        <h4>{% trans %}Comments{% endtrans %} ({{ post.comments }})</h4>
        {{ comments('blog_post', post) }}
    {% endblock %}
{% endblock %}