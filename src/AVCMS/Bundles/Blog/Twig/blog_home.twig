{% extends 'index.twig' %}

{% block title %}Blog Homepage{% endblock %}

{% block content %}
    Hello {{ user.username }}, lets get bloggingz!
    <div class="row">

        <div class="col-md-8">
        {% block blog_posts %}
            {% for post in posts %}
                <article class="blog_post_container">
                    <h2><a href="{{ url(bundle.route.blog_post, {slug: post.slug}) }}">{{ post.title }}</a> <small>by {{ post.user.username }}</small></h2>

                    <p>{{ post.body|markdown }}</p>

                    {% for tag in post.tags %}
                        <a class="btn btn-default btn-xs">{{ tag.name }}</a>
                    {% endfor %}

                    <small>Options: <a href="{{ url(bundle.route.blog_edit_post, { id: post.id}) }}">Edit</a></small>
                </article>
            {% endfor %}
        {% endblock %}
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Welcome</h3>
                </div>
                <div class="panel-body">
                    Well I am the best person here and welcome to my blog! I love a good blog in the afternoon! <a class="btn btn-default btn-xs">Test</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}