{% extends 'index.twig' %}

{% block title %}Blog Homepage{% endblock %}

{% block content %}
    Hello {{ user.username }}, lets get bloggingz!
    <div class="row">

        <div class="col-md-8">
        {% block blog_posts %}
            {% for post in posts %}
                <article class="blog_post_container">
                    <h2>{{ post.title }} <small>by {{ post.author }}</small></h2>

                    <p>{{ post.body|markdown }}</p>

                    <small>Options: <a href="{{ url('blog_edit_post', { id: post.id}) }}">Edit</a> Extension: {{ post.testone.something }}</small>
                </article>
            {% endfor %}
        {% endblock %}
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Welcome</h3>
                </div>
                <div class="panel-body">
                    Well hello and welcome to my blog! I love a good blog in the afternoon!
                </div>
            </div>
        </div>
    </div>
{% endblock %}