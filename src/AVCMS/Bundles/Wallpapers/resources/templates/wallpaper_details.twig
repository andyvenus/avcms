{% extends 'index.twig' %}

{% block content %}
    <div class="wallpaper-details">
        {% block wallpaper_thumbnail %}
        <div class="box wallpaper-thumbnail-box">
            <div class="box-top">
                <h1>{{ wallpaper.name }}</h1>
            </div>
            <div class="box-main">
                <p>
                    <img src="{{ wp_thumbnail_url(wallpaper, 'lg') }}" alt="{{ wallpaper.name }}" width="100%" class="img-thumbnail" />
                </p>

                <div class="row">
                    <div class="col-md-12 text-center">
                        {{ like_dislike_buttons('wallpaper', wallpaper.id, wallpaper) }}

                        {% if is_granted('ADMIN_WALLPAPERS') %}
                            <a class="btn btn-default" href="{{ path('wallpapers_admin_edit', {'id': wallpaper.id}) }}"><span class="glyphicon glyphicon-pencil"></span> {% trans %}Edit Wallpaper{% endtrans %}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block wallpaper_info %}
        <div class="box wallpaper-info-box">
            <div class="box-top">
                <h4>{% trans %}Wallpaper Details{% endtrans %}</h4>
            </div>
            <div class="box-main">
                {% if wallpaper.description %}
                    <div class="row">
                        <div class="col-md-12">
                            <p>{{ wallpaper.description }}</p>
                        </div>
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-md-4">
                        <p>{% trans %}Name{% endtrans %}: {{ wallpaper.name }}</p>
                    </div>
                    <div class="col-md-4">
                        <p>{% trans %}Category{% endtrans %}: {{ wallpaper.category.name }}</p>
                    </div>
                    <div class="col-md-4">
                        {% trans %}Tags{% endtrans %}:
                        {% for tag in wallpaper.tags %}
                            <a class="btn btn-default btn-xs" href="{{ url('browse_wallpapers', {tags: tag.name}) }}">{{ tag.name }}</a>
                        {% else %}
                            {% trans %}None{% endtrans %}
                        {% endfor %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <p>{% trans %}Date Added{% endtrans %}: {{ wallpaper.publish_date|date(settings.date_format) }}</p>
                    </div>
                    <div class="col-md-4">
                        <p>{% trans %}Views{% endtrans %}: {{ wallpaper.hits }} &nbsp;{% trans %}Downloads{% endtrans %}: {{ wallpaper.totalDownloads }}</p>
                    </div>
                    <div class="col-md-4">
                        <p>{% trans %}Original Resolution{% endtrans %}:
                            <a href="{{ url('wallpaper_preview', {slug: wallpaper.slug, resolution: wallpaper.originalWidth ~ 'x' ~ wallpaper.originalHeight}) }}">{{ wallpaper.originalWidth }}x{{ wallpaper.originalHeight }}</a></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {% if wallpaper.submitter %}
                            {% trans %}Submitted By{% endtrans %}: <a href="{{ url('user_profile', {slug: wallpaper.submitter.slug}) }}">{{ wallpaper.submitter.username }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% if wallpaper.resizeType != 'original' %}
            {% block wallpaper_resolutions %}
                <div class="box wallpaper-resolutions-box">
                    <div class="box-top">
                        <h4>{% trans %}Resolutions{% endtrans %}</h4>
                    </div>
                    <div class="box-main">
                        <div class="row user-resolution">
                            <div class="col-md-12 text-center">
                                {% trans %}Your resolution:{% endtrans %} <a href="#" class="current-res-link btn btn-link"></a>
                            </div>
                        </div>
                        <div class="row">
                            {% for resolution_category, category_resolutions in resolutions %}

                                <div class="col-md-4">
                                    <h4>{{ resolution_category }}</h4>

                                    {% for resolution, name in category_resolutions %}
                                        <a data-resolution="{{ resolution }}" href="{{ url('wallpaper_preview', {slug: wallpaper.slug, resolution: resolution}) }}">{{ name }}</a><br/>
                                    {% endfor %}
                                </div>

                                {% if loop.index is divisible by(3) %}
                                    </div><div class="row">
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endblock %}
        {% else %}
            {% block wallpaper_original_resolution %}
                <div class="wallpaper-original-only text-center">
                    <a href="{{ url('wallpaper_preview', {slug: wallpaper.slug, resolution: wallpaper.originalWidth ~ 'x' ~ wallpaper.originalHeight }) }}" class="btn btn-primary btn-lg">
                        {% trans %}Preview & Download{% endtrans %}
                    </a>
                </div>
            {% endblock %}
        {% endif %}

        {{ render_modules('wallpaper_details') }}

        {% block wallpaper_comments %}
            {% if settings.comments_enabled %}
                <div class="box wallpaper-comments-box">
                    <div class="box-top">
                        <h4>{% trans %}Comments{% endtrans %} ({{ wallpaper.comments }})</h4>
                    </div>
                    <div class="box-main">
                        {{ comments('wallpaper', wallpaper, wallpaper.comments) }}
                    </div>
                </div>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}
