<div class="list-group">
    {% for wallpaper in wallpapers %}
        <a href="{{ url('wallpaper_details', {slug: wallpaper.slug}) }}" class="list-group-item">
            <div class="media">
                <span class="media-left" href="#">
                    <img src="{{ wp_thumbnail_url(wallpaper, 84, 50) }}" width="84" height="50"/>
                </span>
                <div class="media-body" style="vertical-align: middle;">
                    <h5 class="media-heading">{{ wallpaper.name }} </h5>
                    <span class="small">
                        {% include '@Wallpapers/module/wallpaper_module_details.twig' %}
                    </span>
                </div>
            </div>
        </a>
    {% endfor %}
</div>
