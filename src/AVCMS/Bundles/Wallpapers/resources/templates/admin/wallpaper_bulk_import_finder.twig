{% extends '@admin/finder.twig' %}

{% block finder_header_titles %}
    <div class="col-md-2 hidden-xs">
        {% trans %}Total Files{% endtrans %}
    </div>
    <div class="col-md-2 hidden-sm hidden-xs">
        {% trans %}Already Imported{% endtrans %}
    </div>
    <div class="col-md-2 hidden-sm hidden-xs">
        {% trans %}Created{% endtrans %}
    </div>
{% endblock %}

{% block item_checkbox %}<div class="finder-no-checkbox"></div>{% endblock %}

{% block item_title %}
    <div class="finder-item-title" data-field="name">
        {{ item.name }}
    </div>
{% endblock %}

{% block item_options %}
    <div class="btn-group">
        <a href="{{ url('wallpaper_bulk_import', {folder: item.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-download"></span> {% trans %}Import{% endtrans %}</a>
    </div>

    {% if item.total_files == 0 %}
        {{ buttons.delete('wallpaper_bulk_import_admin_delete') }}
    {% endif %}
{% endblock %}

{% block item_extended_inner %}
    <div class="col-md-2 hidden-xs">
        {{ item.total_files }}
    </div>
    <div class="col-md-2 hidden-sm hidden-xs">
        {{ item.imported_files }}
    </div>

    <div class="col-md-2 hidden-sm hidden-xs">
        {{ item.dir.mtime|date(settings.date_format) }}
    </div>
{% endblock %}
