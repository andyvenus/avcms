{% extends '@admin/finder.twig' %}

{% block finder_header_titles %}
    <div style="margin-left: 85px">
        <div class="col-md-2 hidden-xs">
            {% trans %}Resolution{% endtrans %}
        </div>
        <div class="col-md-3 hidden-sm hidden-xs">
            {% trans %}File{% endtrans %}
        </div>
        <div class="col-md-3 hidden-sm hidden-xs">
            {% trans %}Slug{% endtrans %}
        </div>
        <div class="col-md-1 hidden-sm hidden-xs">
            {% trans %}Hits{% endtrans %}
        </div>
        <div class="col-md-2 hidden-sm hidden-xs">
            {% trans %}Downloads{% endtrans %}
        </div>
    </div>
{% endblock %}

{% block item_main %}
    <div class="finder-thumbnail">
        <img src="{{ wp_thumbnail_url(item, 80, 45) }}" width="80" height="45"/>
    </div>

    {% block item_title %}
        <div class="finder-item-title" data-field="name">
            {{ item.name }}
        </div>
    {% endblock %}

    {% block item_options %}
        <div class="btn-group">
            {{ buttons.edit('wallpapers_admin_edit', item.id) }}

            {{ buttons.delete('wallpapers_admin_delete') }}

            {{ buttons.publish(item.published, 'wallpapers_admin_toggle_published') }}

            {{ buttons.featured(item.featured, 'wallpapers_admin_toggle_featured') }}
        </div>

        {{ buttons.view('wallpaper_details', {slug: item.slug}) }}
    {% endblock %}
{% endblock %}

{% block item_extended_inner %}
    <div class="col-md-2 hidden-xs">
        {{ item.originalWidth }}x{{ item.originalHeight }}
    </div>
    <div class="col-md-3 hidden-sm hidden-xs">
        {{ item.file }}
    </div>
    <div class="col-md-3 hidden-sm hidden-xs">
        <a href="{{ url('wallpaper_details', {slug: item.slug}) }}">{{ item.slug }}</a>
    </div>
    <div class="col-md-1 hidden-sm hidden-xs">
        {{ item.hits }}
    </div>
    <div class="col-md-2 hidden-sm hidden-xs">
        {{ item.totalDownloads }}
    </div>
{% endblock %}
