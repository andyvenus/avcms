{% extends '@Games/embeds/embed_base.twig' %}

{% block game_container %}
    <div id="avcms-game-container" data-original-width="500" data-original-height="80">
        <div id="avcms-game-container-inner" class="text-center" style="width: 500px;height: 80px;margin: auto;">
            <a href="{{ game.file }}" class="btn btn-lg btn-primary" target="_blank">
                <i class="glyphicon glyphicon-play-circle"></i>
                {% trans with {game: game.name} %}Play {game}{% endtrans %}
            </a>
        </div>
    </div>
{% endblock %}
