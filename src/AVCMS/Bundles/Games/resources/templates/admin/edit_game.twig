{% extends '@admin/edit_item.twig' %}

{% block title -%}
    {% spaceless %}
        {% if item.id %}
            {% trans with {'item': item.name} %}Editing {item}{% endtrans %}
        {% else %}
            {% trans %}New Game{% endtrans %}
        {% endif %}
    {% endspaceless  %}
{% endblock %}

{% block editor_title_edit %}
    <span class="light">{% trans %}Editing Game{% endtrans %}:</span> <span data-id="{{ item.id }}" data-field="name">{{ item.name }}</span>
{% endblock %}

{% block editor_title_new %}
    {% trans %}New Game{% endtrans %}
{% endblock %}

{% block form_rows %}
    {{ form_rows_before(form, 'width') }}

    <div class="form-group">
        <label>{% trans %}Dimensions{% endtrans %}</label><br/>
        {{ form_field(form.width, {class: 'input-short'}) }} x {{ form_field(form.height, {class: 'input-short'}) }}
        
        <button type="button" class="btn btn-default avcms-get-game-dimensions"><span class="glyphicon glyphicon-refresh"></span> {% trans %}Auto{% endtrans %}</button>
        <span class="avcms-game-dimensions-error text-danger"></span>
    </div>

    {{ form_rows_after(form, 'height') }}
{% endblock %}
