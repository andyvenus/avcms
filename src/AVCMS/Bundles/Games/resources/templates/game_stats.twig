{% if admin_settings.show_game_ratings %}
    <span class="text-success"><span class="glyphicon glyphicon-thumbs-up"></span> {{ game.likes }}</span>
    <span class="text-danger"><span class="glyphicon glyphicon-thumbs-down"></span> {{ game.dislikes }}</span>
{% endif %}

{% if admin_settings.show_game_hits %}
    &nbsp;<span title="{% trans %}Times Game Played{% endtrans %}"><span class="glyphicon glyphicon-eye-open"></span> {{ game.hits }}</span>
{% endif %}

{% if admin_settings.show_game_date %}
    &nbsp;<span class="glyphicon glyphicon-calendar"></span> {{ game.publishDate|date(settings.date_format) }}
{% endif %}

{% if admin_settings.show_game_category %}
    &nbsp;<span class="glyphicon glyphicon-folder-close"></span>
    {% if no_links %}
        {{ game.category.name }}
    {% else %}
        <a href="{{ path('game_category', {'category': game.category.slug}) }}">{{ game.category.name }}</a>
    {% endif %}
{% endif %}

{% if admin_settings.show_game_comments %}
    &nbsp;<span class="glyphicon glyphicon-comment"></span> {{ game.comments }}
{% endif %}
