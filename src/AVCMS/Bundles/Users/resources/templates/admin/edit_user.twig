{% extends '@admin/edit_item.twig' %}

{% block title -%}
    {% spaceless %}
        {% if item.id %}
            {% trans with {'item': item.username} %}Editing {item}{% endtrans %}
        {% else %}
            {% trans %}New User{% endtrans %}
        {% endif %}
    {% endspaceless  %}
{% endblock %}

{% block editor_title_edit %}
    <span class="light">{% trans %}Editing User{% endtrans %}:</span> <span data-id="{{ item.id }}" data-field="username">{{ item.username }}</span>
{% endblock %}

{% block editor_title_new %}
    {% trans %}New User{% endtrans %}
{% endblock %}
