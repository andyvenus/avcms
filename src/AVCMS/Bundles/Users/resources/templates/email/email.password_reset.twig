{% extends '@email/main.twig' %}

{% block content %}
    <p>{% trans %}You have requested a password reset for your account on{% endtrans %} <a href="{{ path('home') }}">{{ settings.site_name }}</a>.</p>

    <p style="font-weight: bold"><a href="{{ path('user_forgot_password_process', {userId: reset.userId, code: reset.code}) }}">{% trans %}Reset my password{% endtrans %}</a></p>

    <p>{% trans %}If you did not request this password reset ignore this email.{% endtrans %}</p>
{% endblock %}
