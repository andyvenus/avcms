{% extends 'index.twig' %}

{% block title %}{% trans %}Validate Email{% endtrans %}{% endblock %}

{% block content %}
    <h1>Validate Email</h1>



    {% if success %}
        <p>{% trans %}Email validated{% endtrans %}</p>

        <p><a class="btn btn-default" href="{{ url('login') }}">{% trans %}Log in now{% endtrans %}</a></p>
    {% else %}
        <p>{% trans %}Invalid user and verification code combination{% endtrans %}</p>
    {% endif %}
{% endblock %}