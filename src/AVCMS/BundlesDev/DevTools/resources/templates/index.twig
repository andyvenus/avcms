<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>{{ block('title') }}</title>
    <meta name="description" content="The AVCMS developer section">
    <meta name="author" content="AV Scripts">

    <link rel="stylesheet" href="{{ site_url }}web/resources/CmsFoundation/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ site_url }}web/resources/Admin/css/select2.css">
    <link rel="stylesheet" href="{{ site_url }}web/resources/Admin/css/select2-bootstrap.css">
    <link rel="stylesheet" href="{{ site_url }}web/resources/DevTools/css/dev.css">

    <script type="text/javascript">
        var avcms = avcms || {};

        avcms.config = {
            site_url: '{{ site_url }}'
        }
    </script>

    <script src="{{ site_url }}web/resources/CmsFoundation/javascript/jquery.js"></script>
    <script src="{{ site_url }}web/resources/CmsFoundation/javascript/bootstrap.min.js"></script>
    <script src="{{ site_url }}web/resources/Admin/javascript/select2.min.js"></script>
    <script src="{{ site_url }}web/resources/DevTools/javascript/avcms_dev.js"></script>

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">AVCMS</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="{{ url('manage_bundles') }}"><span class="glyphicon glyphicon-th-list"></span> Manage Bundles</a></li>
                <li><a href="{{ url('new_bundle') }}"><span class="glyphicon glyphicon-plus-sign"></span> New Bundle</a></li>
                <li><a href="{{ url('profiler_search') }}"><span class="glyphicon glyphicon-flash"></span> Profiler</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ site_url }}">Frontend</a></li>
                <li><a href="{{ url('admin_dashboard') }}">Admin</a></li>
                <li><a href="{{ url('logout') }}">Logout</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <h1>{% block title %}Dashboard{% endblock %}</h1>

    <div class="dev-content">
        {% block content %}{% endblock %}
    </div>
</div>
</body>
</html>
