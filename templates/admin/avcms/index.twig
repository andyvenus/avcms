<!DOCTYPE html>
<html>
<head>
    {% block head -%}
        <title>{% block title %}{% endblock %}</title>
    {% endblock %}

    {% for css in css('admin') -%}
        <link href="{{ site_url }}{{ css }}" rel="stylesheet">
    {% endfor %}

    <link href="{{ site_url }}templates/admin/avcms/animate.css" rel="stylesheet">
    <link href="{{ site_url }}templates/admin/avcms/avcms_admin.css" rel="stylesheet">

    {% include '@CmsFoundation/inline_js.twig' %}

    {% for js in javascripts('admin') -%}
        <script type="text/javascript" src="{{ site_url }}{{ js }}"></script>
    {% endfor %}

    <!--[if lt IE 9]>
    <script src="{{ site_url }}web/javascript/html5shiv.js"></script>
    <script src="{{ site_url }}web/javascript/respond.js"></script>
    <![endif]-->

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{ site_url }}web/javascript/avcms_admin.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div class="lightbar">
    <div class="inner">

    </div>
</div>

<header class="admin-header navbar">

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-4">
                   <ul class="nav navbar-nav">
                       <li class="visible-xs-inline visible-sm-inline"><a href="#" id="menu_toggle"><span class="glyphicon glyphicon-align-justify"></span> {% trans %}Navigation{% endtrans %}</a></li>
                       <li class="dropdown visible-md-inline visible-lg-inline">
                           <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ random(['Namaste', 'Hello', 'Hola', 'Bonjour', 'Saluton', 'Hallo']) }} {{ user.username }}</a>
                           <ul class="dropdown-menu" role="menu">
                               <li><a href="{{ url('user_profile', {slug: user.slug}) }}">Profile</a></li>
                               <li class="divider"></li>
                               <li><a href="{{ url('logout') }}">Log-out</a></li>
                           </ul>
                       </li>
                   </ul>
            </div>
            <div class="col-xs-4">
                <div class="text-center">
                    <div class="admin-header-logo">
                        <img src="data:image/png;base64," width="42" height="30"/>
                    </div>

                </div>
            </div>

            <div class="col-xs-4">

                <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="{{ url('home') }}"><span class="glyphicon glyphicon-new-window"></span> View Site</a>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
</header>

<aside class="admin-menu">
    <ul>
        {% for menu_item in menu('admin') %}
            <li><a href="{{ menu_item.url }}"><span class="{{ menu_item.icon }}"></span> {{ menu_item.label }}</a></li>
            {% for sub_menu_item in menu_item.children %}
                <li class="sub-menu-item"><a href="{{ sub_menu_item.url }}"><span class="{{ sub_menu_item.icon }}"></span> {{ sub_menu_item.label }}</a></li>
            {% endfor %}
        {% endfor %}
    </ul>
</aside>

<script type="text/javascript">avcms.adminTemplate.verticalDesign()</script>

<div class="main">
    <section class="ajax-main">
        {% block main_content %}{% endblock %}
    </section>
</div>

</body>
</html>