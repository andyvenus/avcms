{% set site_url = url('home') %}

<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <title>{% block title %}{% endblock %}</title>
    {% endblock %}

    <link rel="stylesheet" type="text/css" href="{{ site_url }}web/css/style.css" />
    <link href="{{ site_url }}web/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ site_url }}web/css/bootstrap-markdown.min.css" rel="stylesheet">
    <link href="{{ site_url }}web/css/select2.css" rel="stylesheet">
    <link href="{{ site_url }}web/css/select2-bootstrap.css" rel="stylesheet">
    <link href="{{ site_url }}templates/admin/avcms/animate.css" rel="stylesheet">
    <link href="{{ site_url }}web/css/nanoscroller.css" rel="stylesheet">

    <link href="{{ site_url }}templates/admin/avcms/avcms_admin.css" rel="stylesheet">

    {% for css in css('admin') %}
        <link href="{{ site_url }}{{ css }}" rel="stylesheet">
    {% endfor %}

    <link href="{{ site_url }}web/css/avcms-blocks.css" rel="stylesheet">

    {% for js in javascripts('admin') %}
        <script type="text/javascript" src="{{ site_url }}{{ js }}"></script>
    {% endfor %}

    <!--[if lt IE 9]>
    <script src="{{ site_url }}web/javascript/html5shiv.js"></script>
    <script src="{{ site_url }}web/javascript/respond.js"></script>
    <![endif]-->

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{ site_url }}web/javascript/avcms_admin.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div class="lightbar">
    <div class="inner">

    </div>
</div>

<header class="admin-header navbar">

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-4">
                   <ul class="nav navbar-nav">
                       <li class="dropdown">
                           <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ random(['Namaste', 'Hello', 'Hola', 'Bonjour', 'Saluton', 'Hallo']) }} {{ user.username }}</a>
                           <ul class="dropdown-menu" role="menu">
                               <li><a href="#">Profile</a></li>
                               <li class="divider"></li>
                               <li><a href="#">Log-out</a></li>
                           </ul>
                       </li>
                   </ul>
            </div>
            <div class="col-xs-4">
                <div class="text-center">
                    <div class="admin-header-logo">
                        <img alt="" src="data:image/png;base64," />
                    </div>

                </div>
            </div>

            <div class="col-xs-4">

                <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="{{ url('home') }}"><span class="glyphicon glyphicon-new-window"></span> View Site</a>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
</header>

<aside class="admin-menu">
    <ul>
        <li><a href="#"><span class="glyphicon glyphicon-th"></span> Dashboard</a></li>
        <li><a href="{{ url('blog_admin_home') }}"><span class="glyphicon glyphicon-pencil"></span> Blog</a></li>
        <li><a href="{{ url('avcms_settings') }}"><span class="glyphicon glyphicon-cog"></span> Settings</a></li>
    </ul>
</aside>

<script type="text/javascript">avcms.adminTemplate.verticalDesign()</script>

<div class="main">
    <section class="ajax-main">
        {% block main_content %}{% endblock %}
    </section>
</div>

</body>
</html>