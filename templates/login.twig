{% extends 'index.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    {{ form_start(login_form, 'blog_form.twig') }}

    {% for error in login_form.errors %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endfor %}

    {{ form_rows(login_form) }}

    {{ form_submit_button(login_form) }}

    {{ form_end(login_form) }}
{% endblock %}