{% extends 'avcms_form.twig' %}

{% block form_label_row %}
    {% spaceless %}
        <div class="form-group{% if form_row.has_error == true %} has-error{% endif %}">
            <div class="control-label">
                {{ form_label(form_row, attr) }}
            </div>

            <div class="form_field">
                {{ form_field(form_row, attr) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock %}

{% block checkbox_row %}
    {% spaceless %}
        <div class="checkbox{% if form_row.has_error == true %} has-error{% endif %}">
                {{ form_field(form_row, attr) }}
        </div>
    {% endspaceless %}
{% endblock %}

{% block input_field %}
    {% spaceless %}
        {% set type = type|default('text') %}
        <input type="{{ type }}" name="{{ name }}" {% if value is not empty %}value="{{ value }}"{% endif %} {{ block('attributes') }} />
    {% endspaceless %}
{% endblock %}

{% block textarea_field %}
    {% spaceless %}
        <textarea name="{{ name }}" class="form-control">{% if value is not empty %}{{ value }}{% endif %}</textarea>
    {% endspaceless %}
{% endblock %}

{% block button %}
    {% spaceless %}
        {% set type = type|default('button') %}
        <button type="{{ type }}" class="btn btn-success">{{ label }}</button>
    {% endspaceless %}
{% endblock %}

{% block attributes %}
    {% if type == 'input' or type == 'textarea' or type == 'text' %}
        {% set attr = attr|merge({class: attr.class ~ ' form-control'}) %}
    {% endif %}
    {{ parent() }}
{% endblock %}